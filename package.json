{
  "name": "cljs-template",
  "author": "Anton Volkov",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:css && npm run build:cljs",
    "build:css": "tailwind build styles/main.css -- -o resources/public/css/main.css",
    "build:cljs": "shadow-cljs compile app",
    "watch": "concurrently 'npm:watch:cljs' 'npm:watch:css'",
    "watch:cljs": "shadow-cljs watch app",
    "watch:css": "onchange 'styles/*css' -- npm run build:css"
  },
  "devDependencies": {
    "onchange": "7.1.0",
    "tailwindcss": "1.9.6",
    "shadow-cljs": "2.11.14",
    "concurrently": "5.3.0"
  },
  "dependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1"
  }
}
